
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('http://i.kinja-img.com/gawker-media/image/upload/olrfuukcekeda9eal81j.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">

                </div>
            </div>
        </div>
    </div>
</header>



<!-- Button trigger modal -->
<button style="margin-left:30px;margin-bottom:50px;" type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Ask a new question
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Hey, <%= current_user.email %></h4>
      </div>
      <div class="modal-body">
        <div class="container">
          <h3 style="margin-bottom:20px;"> Ask a new question !</h3>
           <%= form_tag("/questions", method: :post ) do  %>

              <%= text_area_tag(:content, nil,class: 'input-area')   %>


              <%= hidden_field_tag(:user_id)   %>


         </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= submit_tag("Ask!", class: "btn btn-primary") %>
     <% end %>
      </div>
    </div>
  </div>
</div>



<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
          <% @questions.each do |question| %>
            <div class="post-preview">
                <a href="post.html">
                    <h2 class="post-title">
                      <a href="/questions/<%= question.id %>">  <%= question.content %> </a>
                    </h2>
                    <h3 class="post-subtitle">
                      <i class="fa fa-user-secret"> <%= question.answers.size %> Answers </i>
                    </h3>
                </a>
                <p class="post-meta">Posted by <a href="#"><%= question.user.email %></a> <%= question.created_at %></p>
            </div>
            <hr>
            <% end %>

            <!-- Pager -->
            <ul class="pager">
            </ul>
        </div>
    </div>
</div>

<hr>

