<ul>

  <li><%= @question.content %></li>
  <ol>
    <% @answers.each do |answer| %>
      <li><%= answer.user.email %><br><%= answer.content %></li>
      <hr>
    <% end %>
  </ol>

  <%= form_tag("/answers",method: :post) do%>
  <li><%= label_tag(:content) %>
  <%= text_field_tag(:content)   %></li>

  <li><%= label_tag(:question_id) %>
  <%= text_field_tag(:question_id,@question.id)   %></li>

  <li><%= label_tag(:user_id) %>
  <%= text_field_tag(:user_id,current_user.id)   %></li>

  <%= submit_tag("Answer the question !!") %>
  <% end %>

</ul>


<%= link_to "update", "/questions/#{@question.id}/edit", method: :get %>
<br>

<%= link_to "delete", "/questions/#{@question.id}", method: :delete %>


