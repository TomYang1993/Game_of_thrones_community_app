<!DOCTYPE html>
<html>
  <head>
    <title>GameOTApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'feedstheme/feedstheme_manifest' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body  ng-app="app">
    <div ng-controller="feedVoteCtrl" ng-init="setup()">

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/">Community of Thrones</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/">home</a>
                    </li>
                    <li>
                        <a href="/feeds">All feeds</a>
                    </li>
                    <li>
                        <a ng-click=sortCategory('Buzz')>Buzz</a>
                    </li>
                    <li>
                        <a ng-click=sortCategory('Interviews')>Interviews</a>
                    </li>
                    <li>
                        <a ng-click=sortCategory("TvSeries")>Tv series</a>
                    </li>
                    <li>
                        <a ng-click=sortCategory('Debrief')>Debrief</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>






    <%= yield %>
  </div>
    <%= javascript_include_tag 'feedstheme/feedstheme_manifest' %>
  </body>
</html>
