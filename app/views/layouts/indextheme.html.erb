<!DOCTYPE html>
<html>
  <head>
    <title>GameOTApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'indextheme/indextheme_manifest' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


  </head>

  <body id="page-top" class="index">

    <nav id="mainNav" class="navbar navbar-default navbar-custom navbar-fixed-top affix">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="/">Community Of Thrones</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#feeds">Feeds</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#stories">Stories</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#forum">Forum</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#houses">Houses</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact">Contact</a>
                    </li>

                      <% if !current_user %>
                      <li>
                        <a class="page-scroll" href="/users/sign_in">Sign in/Sign up</a>
                      </li>
                      <% end %>
                      <% if current_user %>
                      <li>
                        <a class="page-scroll" href="/usrinterfaces">Welcome ! <%= current_user.email %></a>
                      </li>
                      <li>
                        <%= link_to "Log out", "/users/sign_out", method: 'delete' %>
                      </li>
                      <% end %>

                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>


    <%= yield %>
  </body>
  <%= javascript_include_tag 'indextheme/indextheme_manifest' %>
</html>
