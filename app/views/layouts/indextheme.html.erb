<!DOCTYPE html>
<html>
  <head>
    <title>GameOTApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600&amp;subset=cyrillic,latin'>
    <%= stylesheet_link_tag 'indextheme/indextheme_manifest' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body id="body" data-spy="scroll" data-target=".one-page-header" class="demo-lightbox-gallery dark">


    	<!--=== Header ===-->
    	<nav class="one-page-header navbar navbar-default navbar-fixed-top" role="navigation">
    		<div class="container">
    			<div class="menu-container page-scroll">
    				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
    					<span class="sr-only">Toggle navigation</span>
    					<span class="icon-bar"></span>
    					<span class="icon-bar"></span>
    					<span class="icon-bar"></span>
    				</button>

    				<a class="navbar-brand" href="#intro">
    					<span>C</span>ommunity of Thrones
    					<!-- <img src="assets/img/logo1.png" alt="Logo"> -->
    				</a>
    			</div>

    			<!-- Collect the nav links, forms, and other content for toggling -->
    			<div class="collapse navbar-collapse navbar-ex1-collapse">
    				<div class="menu-container">
    					<ul class="nav navbar-nav">
    						<li class="page-scroll home">
    							<a href="/">Home</a>
    						</li>
                <% if !current_user %>
    						<li class="page-scroll">
    							<a href="#about">Feeds</a>
    						</li>
    						<li class="page-scroll">
    							<a href="#services">Forum</a>
    						</li>
    						<li class="page-scroll">
    							<a href="#news">Houses</a>
    						</li>
    						<li class="page-scroll">
    							<a href="#contact">Contact</a>
    						</li>
                  <% end %>
                  <% if current_user %>
                    <li class="page-scroll">
                       <a href="/usrinterface">Welcome, <%= current_user.email %></a>
                    </li>
                  <% end %>
    						<li class="page-scroll">
                  <% if current_user %>
                  <%= link_to "Log out" ,destroy_user_session_path, method: :delete %>
                  <% end %>
                  <% if !current_user %>
    							<a href="/users/sign_in">Sign in/Sign up</a>
                  <% end %>
    						</li>

    					</ul>
    				</div>
    			</div>
    			<!-- /.navbar-collapse -->
    		</div>
    		<!-- /.container -->
    	</nav>
    	<!--=== End Header ===-->


    <%= yield %>
  </body>


  <%= javascript_include_tag 'indextheme/indextheme_manifest' %>
  <script type="text/javascript">
		jQuery(document).ready(function() {
			App.init();
			App.initCounter();
			App.initParallaxBg();
			LoginForm.initLoginForm();
			ContactForm.initContactForm();
			OwlCarousel.initOwlCarousel();
			StyleSwitcher.initStyleSwitcher();
			RevolutionSlider.initRSfullScreen();
		});
	</script>
</html>
